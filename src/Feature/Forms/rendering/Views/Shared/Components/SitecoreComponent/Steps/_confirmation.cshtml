<form id="confirmationForm" class="form-horizontal" method="post" action="/submitApplication/">
    <div class="form-card">
        <div class="row">
            <div class="col-7">
                <h2 class="fs-title">Confirmation and Submission</h2>
            </div>
            <div class="col-5">
                <h2 class="steps">Step <span>7</span> of 7</h2>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="form-check-wrap">
            <input class="form-check-input" type="checkbox" value="" id="chkTerms" required>
